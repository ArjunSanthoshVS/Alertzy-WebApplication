<div class="background pb-3">
    <div class="container" style="vh-100">

        <a class="navbar-brand mt-4" style="font-family: none; font-weight: 900; color: black;">
            <h1 class="text-center pt-5">Manage Category</h1>
        </a>
        <div class="d-flex justify-content-center">
            <form id="addCategory" method="post" class="row g-1 mt-4 needs-validation" novalidate>
                <div class="col-auto">
                    <label for="inputPassword2" class="visually-hidden">Password</label>
                    <input type="text" class="form-control" id="inputPassword2" placeholder="Add Category"
                        name="category" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Add</button>
                </div>
            </form>
        </div>
        <div class="d-flex justify-content-center">
            <ol class="list-group mt-4 ms-5 w-50 ">
                {{#each category}}
                {{!-- <li class="list-group-item d-flex justify-content-center align-items-center mb-3">
                    <div class="ms-2 me-auto p-3">
                        <div class="fw-bold">{{this.category}}</div>
                    </div>
                    <button type="button" onclick="editCategory('{{this._id}}')" style=" border:0;"><i
                            class="fa-solid fa-pen-to-square d-flex justify-content-center"
                            style="font-size:20px; color: blue;"></i>
                    </button>

                    <button type="button" style="border:0;" onclick="deleteCategory('{{this._id}}')"><i
                            class="fa-solid fa-trash d-flex justify-content-center"
                            style="font-size:20px; color: red;"></i></button>
                </li> --}}

                <li class="list-group-item d-flex justify-content-center align-items-center mb-3">
                    <div class="ms-2 me-auto p-3">
                        <span style="font-weight: bold;">{{inc @index}}</span>
                        <span class="ms-4" id="{{this._id}}">{{this.category}}</span>
                    </div>
                    <div class="float-end">
                        <button class="border-0 " onclick="editCategory('{{this._id}}')" style="color: blue;">
                            <i class="fa-solid fa-pen-to-square d-flex justify-content-center"
                                style="font-size:20px; color: blue;"></i>
                        </button>
                        <button type="button" style="border:0; background-color: white;"
                            onclick="deleteCategory('{{this._id}}')"><i
                                class="fa-solid fa-trash d-flex justify-content-center ms-3"
                                style="font-size:20px; color: red;"></i></button>
                    </div>
                </li>
                {{/each}}
            </ol>
        </div>
    </div>
</div>
<div class="modal fade" id="edit-category" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editCategory" method="post">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Category:</label>
                        <input type="text" name="category" class="form-control" id="" value="">
                        <input type="text" name="category" class="form-control" value="" hidden>
                    </div>
                    <button type=" button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>