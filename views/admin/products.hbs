<div class="background pb-3">
  <div class="container" style="margin-left: 12rem; padding-right: 9px; vh-100">
    <nav class="navbar navbar-light bg-white p-3 ms-2" style="margin-right:-33px;">
      <div class="container-fluid">
        <a class="navbar-brand" style="font-family: none; font-weight: 900; color: black;">
          <h1>Products</h1>
        </a>
        <form class="d-flex">
          <input class="form-control me-1" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-primary" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>
    </nav>
    <div class="row height d-flex p-3">
    </div>
    <table class="table table-dark table-striped ms-3" style="">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Product</th>
          <th scope="col">Brand</th>
          <th scope="col">Stock</th>
          <th scope="col">Actual Price</th>
          <th scope="col">Offer Price</th>
          <th scope="col">Category</th>
          <th scope="col">Image</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{ @index}}</th>
          <td>{{this.product}}</td>
          <td>{{this.brand}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.actualprice}}</td>
          <td>{{this.offerprice}}</td>
          <td>{{this.category}}</td>
          <td><img style="width:100px; height:100px;" src="/product-images/{{this._id}}/{{this._id}}_0.png" alt=""></td>
          <td><a href="/admin/edit-product/{{this._id}}"><button class="btn btn-primary">Edit</button></a></td>
          <td><a href="/admin/delete-product/{{this._id}}"
              onclick="return confirm('Are you want to delete {{this.product}}')"><button
                class="btn btn-danger">Delete</button></a></td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</div>