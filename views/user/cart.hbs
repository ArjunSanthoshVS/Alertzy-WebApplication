<div class="container" style="display: flex;">
  <div class="col-9">
    <div class="container bg-white"
      style="margin-top: 130px; border-radius: 10px; box-shadow: rgb(100 100 111 / 50%) 0px 7px 29px 0px;">

      <body>

        <main>
          <div class="basket mt-5 ">
            <div class="basket-module">
              {{!-- <label for="promo-code">Enter a promotional code</label>
              <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
              <button class="promo-code-cta">Apply</button> --}}
              <h2 class="fw-bold">Your Cart..! <h4>( {{cartCount}} items )</h4>
              </h2>
            </div>
            <div class="basket-labels">
              <ul>
                <li class="item item-heading">Item</li>
                <li class="price">Price</li>
                <li class="quantity">Quantity</li>
                {{!-- <li class="subtotal">Subtotal</li> --}}
              </ul>
            </div>
            {{#if cartCount}}
            {{#each products}}
            <div class="basket-product">
              <div class="item">
                <div class="product-image">
                  <img src="/product-images/{{this.product._id}}/{{this.product._id}}_0.png" alt="Placholder Image 2">
                </div>
                <div class="product-details">
                  <p style="font-weight: 600;">{{this.product.brand}}</p>
                  <h1 style="font-size:27px;"><strong>{{this.product.product}}</strong></h1>
                </div>
              </div>
              <div class="price" style="font-size: 20px; font-weight: 600;">₹{{this.product.offerprice}}</div>
              <div class="quantity" style=" font-size: 20px; font-weight: 600;">

                <button class="cart-item-count" id="minus{{this.product._id}}"
                  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}',-1)">-</button>
                <span id="{{this.product._id}}">{{this.quantity}}</span>

                <button class="cart-item-count"
                  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}',1)">+</button>
                <div class="remove">
                  {{!-- <a href="/delete-cart-product/{{this.product._id}}?_method=DELETE" data-mdb-toggle="tooltip"
                    title="Remove item"> --}}
                    <button onclick="deleteCart('{{this.product._id}}')"><i class="fa-solid fa-trash"></i></button>
                  </a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <img class="" src="/images/empty-cart-2130356-1800917.webp" alt="">
          {{/if}}
        </main>
      </body>
      <div class="ibox-content pb-3">

        <a class=" checkout-cta btn btn-primary" style="width:20%" href="/products"><i
            class="fa fa-arrow-left"></i>Continue to
          shopping</a>


      </div>
    </div>
  </div>

  <div class="col-3 mt-5 my-auto">
    <div class="summary ms-5 mt-5" style=" box-shadow: rgb(100 100 111 / 20%) 0px 0px 9px 0px; margin-top: 50px">
      <div class="summary-total-items"><span class="total-items"></span> Items in your Bag</div>
      {{#each products}}
      <div class="summary-subtotal">
        <div class="subtotal-title w-100">{{this.product.product}}</div>
        <div class="summary-promo hide">
          <div class="promo-title">Promotion</div>
          <div class="promo-value final-value" id="basket-promo"></div>
        </div>
      </div>
      {{/each}}
      {{!-- <div class="summary-delivery">
        <select name="delivery-collection" class="summary-delivery-selection">
          <option value="0" selected="selected">Select Collection or Delivery</option>
          <option value="collection">Collection</option>
          <option value="first-class">Royal Mail 1st Class</option>
          <option value="second-class">Royal Mail 2nd Class</option>
          <option value="signed-for">Royal Mail Special Delivery</option>
        </select>
      </div> --}}
      <div class="summary-total">
        <div class="total-title">Total</div>
        <div class="total-value final-value" id="basket-total">
          <span id="total">₹{{totalValue}}</span>
        </div>
      </div>

      <div class="summary-checkout">
        {{#if cartCount}}
        <a href="/place-order" class="checkout-cta btn btn-primary"><b>Place Order</b></a>
        {{else}}
        <h4 class="fw-bold text-danger">Please add Some Products...!</h4>
        {{/if}}
        {{!-- <button class="checkout-cta">Go to Secure Checkout</button> --}}
      </div>

    </div>
  </div>
</div>

