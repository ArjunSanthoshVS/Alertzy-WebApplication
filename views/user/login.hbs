<section class="vh-100" style="background-color: #FDFBF8;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem; box-shadow: 4px 3px 8px 1px #969696;">
          <div class="row g-0">
            <div class="col-md-5 col-lg-4 d-none d-md-block p-4"
              style="text-align: center;background-color:darkgray; box-shadow: 3px 0px 2px 1px #969696;">
              <h1 class="mt-5  display-4 fw-bold ls-tight " style="color: white;">
                The best offer for your<br />
                <h1 class="text-primary mt-5 display-2 fw-bold ls-tight" style="text-shadow:3px 1px #969696;;"> Dream
                  Watch</h1>
              </h1>
            </div>
            <div class="col-md-7 col-lg-8 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                {{#if loginErr}}
                <p class="h6" style="color: red;">{{loginErr}}</p>
                {{else}}
                <p></p>
                {{/if}}
                {{#if otpErr}}
                <p class="h6" style="color: red;">{{otpErr}}</p>
                {{else}}
                <p></p>
                {{/if}}

                <form action="/login" method="post">
                  <div class="mb-3 pb-1 d-flex justify-content-center">
                    <img
                      src="https://res.cloudinary.com/dchrawfgy/image/upload/v1668592238/AlertzyOfficial/Logo_vgtbe1.png"
                      alt="" style=" width:50%;">
                  </div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
                  <div class="form-outline mb-4">
                    <input type="email" id="email" class="form-control form-control-lg" name="email" />
                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="password" id="password" class="form-control form-control-lg" name="password" />
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>
                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                    <p>Forgot Password..? <a href="/otp-login">Login with OTP</a></p>
                  </div>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/signup"
                      style="color: #393f81;">Register here</a></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>