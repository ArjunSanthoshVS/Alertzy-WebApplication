<div class="btn-group" role="group" aria-label="Basic radio toggle button group"
    style="margin-top:100px; width: 100%; justify-content: center;">

    <div>
        {{#each category}}
        <a class="btn btn-primary" href="/products?search={{this.category}}">{{this.category}}</a>
        {{/each}}
    </div>

    <div class="float-end ms-3">
        <form class="d-flex" action="/products/" method="get">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </form>
    </div>

</div>
<section>
    <div class="position-fixed w-25 d-none" id="success"
        style="left:530px; top: 100px; z-index: 1000; background-color:black; border-radius:10px;">
        <p id="success-text" class="text-center mt-3" style="color:white;">Added to Cart</p>
    </div>
    <div class="position-fixed w-25 d-none" id="wishSuccess"
        style="left:530px; top: 100px; z-index: 1000; background-color:black; border-radius:10px;">
        <p id="success-text" class="text-center mt-3" style="color:white;">Added to Cart</p>
    </div>
    -
    <div class="container mt-3">
        <div class="row">
            {{#if response}}
            {{#each response}}
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card" style="width: 18rem; margin-top:25px;">

                    <img style="width:75%;" src="{{this.image.[0]}}" class="card-img-top mx-auto mt-3" alt="...">

                    <div class="card-body">
                        <h6>{{this.brand}}</h6>
                        <a style="text-decoration: none;" href="/product-details/{{this._id}}">
                            <h5>{{this.product}}</h5>
                        </a>

                        <p class="mb-0" style="text-decoration :line-through;">₹{{this.actualPrice}}</p>
                        <div class="d-flex">
                            <h5 class="me-3">₹{{this.offerPrice}}</h5>
                            {{#if this.currentOffer}}
                            <p style="color:green;">{{this.currentOffer}}% off</p>
                            {{else}}
                            <p style="color:red;">0% off</p>
                            {{/if}}
                        </div>
                        {{#if this.stock}}
                        {{#if ../user}}
                        <button type="button" class="btn btn-primary" style="border-radius: 10px;"
                            onclick="addToCart('{{this._id}}')">Add to Cart</button>
                        {{else}}
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#login"
                            data-bs-whatever="@mdo" style="border-radius: 10px;">Add
                            to Cart</button>
                        {{/if}}
                        {{else}}
                        <button type="" class="btn btn-danger" style="border-radius: 10px;">Out of Stock</button>
                        {{/if}}
                        <a class="btn btn-danger float-end" onclick="addToWishlist('{{this._id}}')">
                            {{#if this.wishlist}}
                            <i id="remove{{this._id}}" class="fas fa-heart"></i>
                            <i id="add{{this._id}}" class="far fa-heart d-none"></i>
                            {{else}}
                            <i id="add{{this._id}}" class="far fa-heart "></i>
                            <i id="remove{{this._id}}" class="fas fa-heart d-none"></i>
                            {{/if}}
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <h1 class="text-center" style="color:red;"><strong>No items Found......!</strong></h1>
            {{/if}}
        </div>
    </div>
</section>

<style>
    .card:hover {
        box-shadow: rgba(100, 100, 111, 0.5) 0px 7px 29px 0px;
        transition-duration: .6s;
    }
</style>
<div class="modal fade" id="login" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-12">
                        <div class="col-md-12 col-lg-12 d-flex align-items-center">
                            <div class="card-body  text-black">
                                {{#if loginErr}}
                                <p class="h6" style="color: red;">{{loginErr}}</p>
                                {{else}}
                                <p></p>
                                {{/if}}
                                {{#if otpErr}}
                                <p class="h6" style="color: red;">{{otpErr}}</p>
                                {{else}}
                                <p></p>
                                {{/if}}
                                <form method="post" id="login-form" class="needs-validation" novalidate>
                                    <div class="mb-3 pb-1 d-flex justify-content-center">
                                        <img src="/images/Logo.png" alt="" style=" width:50%;">
                                    </div>
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account
                                    </h5>
                                    <div class="invalid-feedback"></div>
                                    <div class="form-outline mb-4">
                                        <input type="email" id="email" class="form-control form-control-lg" name="email"
                                            required />
                                        <label class="form-label" for="form2Example17">Email address</label>
                                    </div>

                                    <div class="invalid-feedback"></div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="password" class="form-control form-control-lg"
                                            name="password" required />
                                        <label class="form-label" for="form2Example27">Password</label>
                                    </div>


                                    <div class="pt-1 mb-4">

                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>

                                    </div>
                                    <div>
                                        <button type="button" data-bs-toggle="modal" data-bs-target="#otp-login"
                                            data-bs-whatever="@mdo" style="border:0; background-color: white;">
                                            <p class="" style="color: #393f81;">Login with OTP</p>
                                        </button>
                                    </div>
                                    <button type="button" data-bs-toggle="modal" data-bs-target="#signup"
                                        data-bs-whatever="@mdo" style="border:0; background-color: white;">
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account?</p>
                                    </button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>