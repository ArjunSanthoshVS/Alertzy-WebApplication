<div class="container mt-5">
    <div class="tab-content">
        <div id="tab-1" class="tab-pane fade show p-0 active">
            <div class="row g-4">
                {{#if response}}
                {{#each response}}
                <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="product-item">
                        <div class="card">
                            <div class="position-relative bg-light overflow-hidden">
                                <img class="img-fluid w-100" src="{{this.image.[0]}}" alt="">
                                {{#if this.currentOffer}}
                                <div
                                    class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                                    {{this.currentOffer}}% off</div>
                                {{else}}
                                <div
                                    class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                                    0% off</div>
                                {{/if}}
                            </div>
                            <div class="text-center p-4">
                                <a class="d-block h5 mb-2" href="/product-details/{{this._id}}">{{this.product}}</a>
                                <span class="me-1" style="color:royalblue;"><strong>₹{{this.offerPrice}}</strong></span>
                                <span class="text-body text-decoration-line-through">₹{{this.actualPrice}}</span>
                            </div>
                            <div class="d-flex border-top">
                                <small class="w-50 text-center border-end py-2">
                                    <a class="text-body" href="/product-details/{{this._id}}"><i class="fa fa-eye me-2"
                                            style="color:royalblue;"></i>View
                                        detail</a>
                                </small>
                                {{#if this.stock}}
                                {{#if ../user}}
                                <small class="w-50 text-center py-2">
                                    <a class="text-body" type="button" href="" onclick="addToCart('{{this._id}}')"><i
                                            class="fa fa-shopping-bag me-2" style="color:royalblue;"></i>Add to Cart
                                    </a>
                                </small>
                                {{else}}
                                <small class="w-50 text-center py-2">
                                    <a class="text-body" type="button" data-bs-toggle="modal" data-bs-target="#login"
                                        href=""><i class="fa fa-shopping-bag me-2" style="color:royalblue;"></i>Add to
                                        cart</a>
                                </small>
                                {{/if}}
                                {{else}}
                                <small class="w-50 text-center py-2">
                                    <a class="text-body"><i class=" fa fa-shopping-bag me-2"
                                            style="color:royalblue;"></i>Out
                                        of Stock</a>
                                </small>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <h1 class="text-center" style="color:red;"><strong>No items Found......!</strong></h1>
                {{/if}}
            </div>
        </div>
    </div>
</div>
