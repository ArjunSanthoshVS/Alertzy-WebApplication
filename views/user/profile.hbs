<div class="container-xl px-4" style="margin-top:90px; width:60%;">
    <nav class=" nav nav-borders">
        <a class="nav-link active ms-0" href="/profile" style="font-size: large; font-weight: 600;">Profile</a>
        <a class="nav-link" href="/address" style="font-size: large; font-weight: 600;">Address</a>
        <a class="nav-link" href="/password" style="font-size: large; font-weight: 600;">Password</a>

    </nav>
    <hr class="mt-0 mb-4">
    <div class="card mb-4">
        <div class="card-header">Account Details</div>
        <div class="card-body">
            <form action="/profile" method="post">
                <!-- Form Group (username)-->
                <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (first name)-->
                    <div class="col-md-6">
                        <label class="small mb-1" for="firstname">First name</label>
                        <input class="form-control" id="firstname" name="firstname" type="text"
                            placeholder="Enter your first name" value="{{user.firstname}}">
                    </div>
                    <!-- Form Group (last name)-->
                    <div class="col-md-6">
                        <label class="small mb-1" for="lastname">Last name</label>
                        <input class="form-control" id="lastname" name="lastname" type="text"
                            placeholder="Enter your last name" value="{{user.lastname}}">
                    </div>
                </div>
                <!-- Form Row        -->

                <!-- Form Group (email address)-->
                <div class="mb-3">
                    <label class="small mb-1" for="email">Email address</label>
                    <input class="form-control" id="email" name="email" type="email"
                        placeholder="Enter your email address" value="{{user.email}}">
                </div>
                <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (phone number)-->
                    <div class="col-md-6">
                        <label class="small mb-1" for="mobile">Phone number</label>
                        <input class="form-control" id="mobile" name="mobile" type="tel"
                            placeholder="Enter your phone number" value="{{user.mobile}}">
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" id="id" name="_id" type="tel" value="{{user._id}}" hidden>
                    </div>
                </div>
                <!-- Save changes button-->
                <button class="btn btn-primary" type="submit">Save changes</button>
            </form>
        </div>
    </div>
</div>